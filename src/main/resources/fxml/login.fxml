<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snapshop.controller.LoginController" stylesheets="@css/style.css">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    <VBox fx:id="loginBox" styleClass="login-box">
        <Label text="Đăng Nhập SnapShop" styleClass="title" />
        <TextField fx:id="usernameField" promptText="Tên đăng nhập" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Mật khẩu" styleClass="input-field" />
        <Button text="Đăng Nhập" onAction="#handleLogin" styleClass="login-button" />
        <Label fx:id="errorLabel" text="" styleClass="error-label" />
    </VBox>
</VBox>