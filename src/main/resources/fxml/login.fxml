<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snapshop.controller.LoginController">
    <children>
        <!-- Nửa trái: Form đăng nhập với nền trắng -->
        <VBox alignment="CENTER" layoutY="-7.0" prefHeight="800.0" prefWidth="700.0" spacing="30.0" style="-fx-background-color: white;">
            <children>
                <Label style="-fx-font-size: 36px; -fx-font-weight: bold;" text="🛍️SnapShop" />
                <Label style="-fx-font-size: 28px;" text="Chào mừng trở lại!" />
                <Label style="-fx-font-size: 18px;" text="Đồng hành cùng bạn trên mọi hành trình!" wrapText="true" />
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Email" />
                        <TextField fx:id="usernameField" prefWidth="400.0" promptText="Nhập Email" style="-fx-font-size: 16px;" />
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Mật khẩu" />
                        <PasswordField fx:id="passwordField" prefWidth="400.0" promptText="••••••" style="-fx-font-size: 16px;" />
                    </children>
                </VBox>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <CheckBox style="-fx-font-size: 14px;" text="Lưu Đăng Nhập" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Hyperlink style="-fx-font-size: 14px;" text="Quên mật khẩu?" />
                    </children>
                </HBox>
                <Button fx:id="signInButton" onAction="#handleLogin" prefWidth="250.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" text="Đăng Nhập" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 16px;" text="Chưa có tài khoản?" />
                        <Hyperlink fx:id="signupLink" onAction="#handleSignupLink" style="-fx-font-size: 16px;" text="Đăng Ký" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>

        <!-- Nửa phải: Hình nền với ImageView -->
        <ImageView fitHeight="800.0" fitWidth="700.0" layoutX="700.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
            <effect>
                <Bloom threshold="0.7" />
            </effect>
            <opacity>0.73</opacity>
        </ImageView>
    </children>
</AnchorPane>
